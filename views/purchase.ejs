<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>FREP Purchase</title>
  <link rel="stylesheet" href="style.css" />
</head>
<body>

<div class="purchase-container">
  <h1>Buy FREP</h1>

  <!-- Wallet Controls -->
  <div class="wallet-controls">
    <button id="connectWallet" class="btn-primary">Connect Wallet</button>
    <select id="walletOptions" class="hidden">
      <option value="">-- Select Wallet --</option>
      <option value="phantom">Phantom</option>
      <option value="solflare">Solflare</option>
    </select>
    <button id="disconnectWallet" class="btn-secondary hidden">Disconnect</button>
    <p id="walletAddress" class="wallet-info"></p>
  </div>

  <!-- Network Info -->
  <div class="network-info">
    <p id="networkInfo">Network: devnet</p>
  </div>

  <!-- Purchase Section -->
  <div class="purchase-box">
    <p>FREP Price = $0.001</p>
    <input id="amountInput" type="number" placeholder="Enter amount" />
    <p id="usdValue">USD Value: $0.0000</p>
  </div>

  <!-- Buy Button -->
  <div class="buy-section">
    <button id="buyNow" class="btn-buy" disabled>Buy Now</button>
  </div>
</div>

<script type="module" src="purchase.js"></script>
</body>
</html>
